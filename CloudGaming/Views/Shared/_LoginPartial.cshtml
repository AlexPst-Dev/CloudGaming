@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="userNav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="aUserConnected">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btnLogout">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item link">
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item link" style="margin-left: 1rem">
            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>